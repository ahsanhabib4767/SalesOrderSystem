@model IList<MySales.Models.OrderDetail>

<div class="form-horizontal">
    <h4>OrderDetails</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-bordered table-hover table-responsive table-striped">
        <thead>
            <tr>
                <td>Order ID</td>
                <td>Order Details</td>
                <td>Unit</td>
                <td>Rate</td>
                <td>Quantity</td>
                <td>Amount</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                @Html.HiddenFor(m => Model[i].OrderItemsId)
            <tr>
                <td>
                    @Html.EditorFor(m => Model[i].OrderID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(m => Model[i].Description, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(m => Model[i].Unit, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(m => Model[i].Rate, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(m => Model[i].Qty, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(m => Model[i].Amt, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>

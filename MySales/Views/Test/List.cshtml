@model MySales.Models.ViewModel.VMOrder


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pphone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pphone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.pid }) |
                @Html.ActionLink("Details", "Details", new { id = item.pid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.pid })
            </td>
        </tr>
    }

</table>

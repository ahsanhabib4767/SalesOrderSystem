
@model MySales.Models.Order
@{
    ViewBag.Title = "null";
}
@{
    Layout = "~/Views/Shared/_Pdfview.cshtml";
}

<div>
    <span><img src="~/Image/wer.png" alt="" width="70" height="45"></span>

    <h3>Invoice of : @Model.OrderId</h3>
</div>
<div class="panel panel-success">
    <div class="panel-heading ">
        <div class="clearfix ">
            @Model.Heading
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-responsive">
            <tbody>
                <tr>
                    <td>Customer Name : @Model.tblCustomer.CustomerName </td>
                    <td>Address : @Model.tblCustomer.Address </td>
                    <td>Order Date : @Model.OrderDate</td>
                </tr>
                <tr>
                    <td colspan="3">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                                @{
                                    var totalBill = 0;
                                    var tax = 0 ;
                                    var result =0;
                                }
                                @foreach (var order in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@order.Description</td>
                                        <td>@order.Qty</td>
                                        <td>@order.Rate</td>
                                        <td>@order.Amt</td>
                                    </tr>
                                    totalBill = totalBill + @Convert.ToInt32(order.Amt);
                                    tax = (totalBill *15)/100;
                                    result = totalBill + tax;
                                }
                            </tbody>
                        </table>
                        <span class="pull-right" style="margin-right:100px;"><strong>(Including VAT) Total Bill :  </strong> @result</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    </div>
<div class="panel panel-info">
    <div class="panel-body">
        <p>Approved By</p>
        <p>Head Of Marketing</p>
    
    </div>

    <div class="panel-footer">Transcom Bevarages Limited</div>
</div>